<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".Home.SetPassword">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ic_back"
                android:layout_width="33dp"
                android:layout_height="33dp"
                app:srcCompat="@drawable/ic_back" />

            <TextView
                android:id="@+id/settings"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Set Password"
                android:textColor="@color/white"
                android:textSize="25dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="337dp"
            android:layout_height="45dp"
            android:layout_marginTop="50dp"
            android:layout_marginStart="35dp"
            android:orientation="horizontal"
            android:background="@drawable/gray_background_layout">

            <EditText
                android:id="@+id/Current_Password"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:hint="Current password"
                android:background="@null"
                android:layout_marginStart="20dp"
                android:textColorHint="@color/white_75"
                android:textColor="@color/black"
                android:textSize= "18dp"
                android:inputType="textPassword"
                android:fontFamily="@font/poppins_regular" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_eye"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="337dp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="35dp"
            android:orientation="horizontal"
            android:background="@drawable/gray_background_layout">

            <EditText
                android:id="@+id/New_Password"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:hint="New password"
                android:background="@null"
                android:layout_marginStart="20dp"
                android:textColorHint="@color/white_75"
                android:textColor="@color/black"
                android:textSize= "18dp"
                android:inputType="textPassword"
                android:fontFamily="@font/poppins_regular" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_eye"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="337dp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="35dp"
            android:orientation="horizontal"
            android:background="@drawable/gray_background_layout">

            <EditText
                android:id="@+id/Confirm_Password"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:hint="Confirm password"
                android:background="@null"
                android:layout_marginStart="20dp"
                android:textColorHint="@color/white_75"
                android:textColor="@color/black"
                android:textSize= "18dp"
                android:inputType="textPassword"
                android:fontFamily="@font/poppins_regular" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_eye"/>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_save_password"
            android:layout_width="337dp"
            android:layout_height="45dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="33dp"
            android:background="@color/bgButton"
            android:text="Save"
            android:textAllCaps="false"
            android:textColor="@color/white_75"
            android:textSize="19dp"

            android:fontFamily="@font/poppins_bold"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>